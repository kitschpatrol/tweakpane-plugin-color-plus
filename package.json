{
	"name": "tweakpane-plugin-color-plus",
	"version": "0.0.0",
	"type": "module",
	"description": "Advanced color handling for Tweakpane.",
	"repository": "github:kitschpatrol/tweakpane-plugin-color-plus",
	"homepage": "https://github.com/kitschpatrol/tweakpane-plugin-color-plus",
	"bugs": "https://github.com/kitschpatrol/tweakpane-plugin-color-plus/issues",
	"author": {
		"name": "Eric Mika",
		"email": "eric@ericmika.com",
		"url": "https://ericmika.com"
	},
	"license": "MIT",
	"packageManager": "pnpm@9.12.2",
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=9.0.0"
	},
	"main": "dist/tweakpane-plugin-color-plus.js",
	"exports": {
		".": {
			"types": "./dist/types/index.d.ts",
			"default": "./dist/tweakpane-plugin-color-plus.js"
		},
		"./lite": {
			"types": "./dist/types/index.d.ts",
			"default": "./dist/tweakpane-plugin-color-plus.lite.js"
		}
	},
	"types": "dist/types/index.d.ts",
	"files": [
		"dist"
	],
	"keywords": [
		"npm-package",
		"tweakpane",
		"tweakpane-plugin"
	],
	"scripts": {
		"build": "run-p build:*",
		"build:dev": "vite build",
		"build:dts": "tsc --noEmit",
		"build:prod": "vite build --mode production",
		"clean": "rimraf dist",
		"dev": "vite",
		"format": "run-p format:*",
		"format:scss": "prettier --parser scss --write \"src/sass/**/*.scss\"",
		"format:ts": "eslint --fix \"src/**/*.ts\"",
		"lint:ts": "eslint --config eslint.config.js src/",
		"prepare": "run-s clean build",
		"prepublishOnly": "npm test",
		"release": "bumpp --commit 'Release: %s' --tag '%s' && pnpm run build && pnpm publish --otp $(op read 'op://Personal/Npmjs/one-time password?attribute=otp')",
		"server": "vite preview",
		"start": "vite",
		"test": "eslint \"src/**/*.ts\"",
		"watch": "vite"
	},
	"peerDependencies": {
		"tweakpane": "^4.0.0"
	},
	"dependencies": {
		"@tweakpane/core": "^2.0.4"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^8.11.0",
		"@typescript-eslint/parser": "^8.11.0",
		"autoprefixer": "^10.4.20",
		"bumpp": "^9.7.1",
		"eslint": "^9.13.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.2.1",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.47",
		"prettier": "^3.3.3",
		"prettier-plugin-pkg": "^0.18.1",
		"rimraf": "^6.0.1",
		"sass": "^1.80.4",
		"typescript": "^5.6.3",
		"vite": "^5.0.0",
		"vite-plugin-dts": "^4.3.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
